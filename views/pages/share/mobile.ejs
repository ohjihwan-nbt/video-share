    <div class="top">
      <div class="logo">
        <img src="https://s3.ap-northeast-2.amazonaws.com/alock-cdn-origin/qiz/contents/share/logo.png">
      </div>
      <div class="openApp">앱 열기</div>
    </div>

    <div class="detail">
      <div class="videoBox">
        <img class="thumbnail playstart" src="<%-imageUrl%>">>
        <div class="play-btn playstart">
          <img src="https://s3.ap-northeast-2.amazonaws.com/alock-cdn-origin/qiz/contents/share/play_button.png" alt="start">
        </div>
      </div>
      <div class="userInfo">
        <div class="hashTags">#라이브퀴즈쇼 #더퀴즈라이브 #<%- nickname %> #<%- referrer %></div>
      </div>
    </div>
  </div>

  <script src="https://akamai-cdn.cashslide.kr/jquery-1.9.1.min.js"></script>
  <script>
  $(document).ready(function () {
    var player;

    var videoHtmlTemplate = '<div class="play-btn play disabled">'+
        ' <img src="https://s3.ap-northeast-2.amazonaws.com/alock-cdn-origin/qiz/contents/share/play_button.png" alt="start"></div><video playsinline class="player"' +
        ' src="<%-videoUrl%>"' +
        ' poster="<%-imageUrl%>"' +
        ' type="video/mp4" style="width: 100%;"></video>';

    var togglePlayButton = function(isHide) {
      $('.play-btn')[isHide ? 'removeClass' : 'addClass']('disabled');
      if (player) isHide ? player.pause() : player.play();
    };

    var onPlayerEnded = function() {
      togglePlayButton(true)
    };

    var onPlayerClicked = function () {
      if (player.paused) togglePlayButton(false);
      else togglePlayButton(true);
    };

    var onPlayStartInitialized = function () {
      player = $('.player')[0];
      player.play();

      $('.player').click(onPlayerClicked)
      $('.play').click(onPlayerClicked)
      $('.player').on('ended', onPlayerEnded)
    };

    var onPlayStartButtonClicked = function () {
      togglePlayButton(false);
      $('.videoBox').html(videoHtmlTemplate).promise().done(onPlayStartInitialized);
    };

    $('.playstart').click(onPlayStartButtonClicked);
    $('.container .top').click(function() {
      location.href = 'https://c78g3.app.goo.gl/6Jjx'
    });
  });
  </script>
</body>
