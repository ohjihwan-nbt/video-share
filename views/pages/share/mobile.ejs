  <style>
    @import url(//fonts.googleapis.com/earlyaccess/notosansgothic.css);
    body,
    html {
      font-family: 'Noto Sans Gothic', sans-serif;
      margin: 0;
      padding: 0
    }
    html { font-size: 12px; }
    body { background-color: #212121; min-width: 320px; }
    .container { position: relative; }
    .container .top { height: 4rem; }
    .container .logo { 
      position: absolute;
      left: .5rem;
      top: .7rem;
      display: inline-block;
      width: 14rem;
    }
    .container .logo img { width:100%; }
    .container .openApp {
      position: absolute;
      top: .8rem;
      right: .5rem;
      display: inline-block;
      width: 8rem;
      height: 2.56rem;
      line-height: 2.56rem;
      border-radius: .08rem;
      background-color: #ffe700;
      color: #212121;
      font-weight: bold;
      vertical-align: top;
      text-align: center;
    }
    .videoBox {
      position: relative;
      width: 100%;
      height: 100%;
    }
    .videoBox img { width: 100%; }
    .videoBox .play-btn img {
      position: absolute;
      top: 0;
      left: 0;
      padding-left: calc( (100% - 6rem) / 2);
      padding-top: 70%;
      width: 6rem;
    }
    .disabled {
      display: none
    }
    .container .detail .userInfo{
      position: absolute;
      color: #fff;
      height: 10rem;
      padding-top: 2rem;
      padding-left: 1rem;
      padding-right: 1rem;
      width: calc(100% - 2rem);
      bottom: 0;
      background-image: -webkit-gradient(linear,left top,left bottom,from(rgba(0,0,0,0)),to(rgba(0,0,0,.6)));
      background-image: -webkit-linear-gradient(rgba(0,0,0,0),rgba(0,0,0,.6));
      background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,.6));
    }
    .hashTags {
      position: absolute;
      bottom: 5rem;
    }
    .avatar {
      vertical-align: top
    }

    .avatar img {
      width: 4rem;
      height: 4rem;
      border-radius: 50%;
    }
