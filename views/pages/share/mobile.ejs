  <style>
    html { font-size: 12px; }
    body { background-color: #212121; min-width: 320px; }
    .container { position: relative; }
    .container .top { height: 4rem; }
    .container .logo { 
      position: absolute;
      left: .5rem;
      top: .7rem;
      display: inline-block;
      width: 14rem;
    }
    .container .logo img { width:100%; }
    .container .openApp {
      position: absolute;
      top: .8rem;
      right: .5rem;
      display: inline-block;
      width: 8rem;
      height: 2.56rem;
      line-height: 2.56rem;
      border-radius: .08rem;
      background-color: #ffe700;
      color: #212121;
      font-weight: bold;
      vertical-align: top;
      text-align: center;
    }
    .videoBox {
      position: relative;
      width: 100%;
      height: 100%;
      background-image: -webkit-gradient(linear,left top,left bottom,from(rgba(0,0,0,0)),to(rgba(0,0,0,.6)));
      background-image: -webkit-linear-gradient(rgba(0,0,0,0),rgba(0,0,0,.6));
      background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,.6));
    }
    .videoBox img { width: 100%; }
    .videoBox .play-btn img {
      position: absolute;
      top: 0;
      left: 0;
      padding-left: calc( (100% - 6rem) / 2);
      padding-top: 70%;
      width: 6rem;
    }
    .disabled {
      display: none
    }
    .container .detail .userInfo{
      position: absolute;
      color: #fff;
      height: 10rem;
      padding-top: 2rem;
      padding-left: 1rem;
      padding-right: 1rem;
      width: calc(100% - 2rem);
      bottom: 0;
      background-image: -webkit-gradient(linear,left top,left bottom,from(rgba(0,0,0,0)),to(rgba(0,0,0,.6)));
      background-image: -webkit-linear-gradient(rgba(0,0,0,0),rgba(0,0,0,.6));
      background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,.6));
    }
    .avatar {
      vertical-align: top
    }

    .avatar img {
      width: 4rem;
      height: 4rem;
      border-radius: 50%;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="top">
      <div class="logo">
        <img src="https://s3.ap-northeast-2.amazonaws.com/alock-cdn-origin/qiz/contents/share/logo.png">
      </div>
      <div class="openApp">앱 열기</div>
    </div>

    <div class="detail">
      <div class="videoBox">
        <img class="thumbnail playstart" src="https://alock-image.cashslide.kr/qiz/video/thumb_video_1552377563ccc89cc460.png">
        <div class="play-btn playstart">
          <img src="https://s3.ap-northeast-2.amazonaws.com/alock-cdn-origin/qiz/contents/share/play_button.png" alt="start">
        </div>
      </div>
      <div class="userInfo">
        <div class="hashTags">#라이브퀴즈쇼 #배혜지 #기상캐스터 #URL의아이디<%= id %></div>
        <div class="avatar inline">
          <img src="https://alock-image.cashslide.kr/qiz/pic/4/profile_120.webp">
        </div>
        <div class="nickname"><%= nickname %></div>
        <div class="referrer">추천인코드 <b><%= referrer %></b></div>
        <div class="winner">라이브퀴즈 총 <%= winningCount %>회 우승</div>
      </div>
    </div>
  </div>

  <script src="https://akamai-cdn.cashslide.kr/jquery-1.9.1.min.js"></script>
  <script>
  $(document).ready(function () {
    var player;

    var videoHtmlTemplate = '<div class="play-btn play disabled"><img src="https://s3.ap-northeast-2.amazonaws.com/alock-cdn-origin/qiz/contents/share/play_button.png" alt="start"></div><video class="player"\n' +
        ' src="https://alock-image.cashslide.kr/qiz/video/share_video_15523775653a02846805.mp4"\n' +
        ' poster="https://alock-image.cashslide.kr/qiz/video/thumb_video_1552377563ccc89cc460.png"\n' +
        ' type="video/mp4" style="width: 100%;"></video>';

    var togglePlayButton = function(isHide) {
      $('.play-btn')[isHide ? 'removeClass' : 'addClass']('disabled');
      if (player) isHide ? player.pause() : player.play();
    };

    var onPlayerEnded = function() {
      togglePlayButton(true)
    };

    var onPlayerClicked = function () {
      if (player.paused) togglePlayButton(false);
      else togglePlayButton(true);
    };

    var onPlayStartInitialized = function () {
      player = $('.player')[0];
      player.play();

      $('.player').click(onPlayerClicked)
      $('.play').click(onPlayerClicked)
      $('.player').on('ended', onPlayerEnded)
    };

    var onPlayStartButtonClicked = function () {
      togglePlayButton(false);
      $('.videoBox').html(videoHtmlTemplate).promise().done(onPlayStartInitialized);
    };

    $('.playstart').click(onPlayStartButtonClicked);
  });
  </script>
</body>
</html>
